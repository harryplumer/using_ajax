<h1 class="center">Games Project</h1>
<hr />
<div class="row">
  <div class="col s12 m6">
    <h3>Games</h3>
    <button class="btn" id="toggle">Show Form</button>
    <ul id="games-list">
      <% @games.each do |game| %>
        <%= render partial: 'game', locals: { game: game } %>
      <% end %>
    </ul>
  </div>
  <div class="col s12 m6">
    <h3 id="game">Characters In Game</h3>
    <button class="btn" id="toggle-char">Show Form</button>
    <ul id="characters"></ul>
  </div>
</div>